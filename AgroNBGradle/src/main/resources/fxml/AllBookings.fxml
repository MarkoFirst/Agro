<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AllBookings">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane prefHeight="1080.0" prefWidth="930.0">
            <children>
                <Button layoutX="34.0" layoutY="36.0" mnemonicParsing="false" onAction="#menu" text="Меню" />
                <TableView fx:id="bookings" layoutX="13.0" layoutY="87.0" prefHeight="972.0" prefWidth="485.0">
                    <columns>
                        <TableColumn fx:id="sellerTC" prefWidth="223.0" text="Продал" />
                        <TableColumn fx:id="allPriceTC" prefWidth="107.0" text="Сумма" />
                  <TableColumn fx:id="dateTC" prefWidth="154.0" text="Дата" />
                    </columns>
                </TableView>
            <Pane layoutX="514.0" layoutY="33.0" prefHeight="757.0" prefWidth="419.0">
               <children>
                  <TableView fx:id="bookingObj" layoutX="4.0" layoutY="54.0" prefHeight="703.0" prefWidth="418.0">
                    <columns>
                      <TableColumn fx:id="nameTC" prefWidth="150.0" text="Наименование" />
